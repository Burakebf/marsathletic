
@using MarsAhletic.WebUI.Models
@{
    ViewBag.Title = "M-Port | Hesap Düzenle";
}
@model LoginAccount

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">Giriş Hesabı Düzenle</h4>
        <ol class="breadcrumb">
            <li>
                <a href="javascript:void(0);">Ayarlar</a>
            </li>
            <li>
                <a href="@Url.Action("ListAccounts", "Administration")">Giriş Hesapları</a>
            </li>
            <li>
                Hesap Düzenle
            </li>
            <li class="active">
                @Model.UserName
            </li>
        </ol>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <form action="@Url.Action("EditAccount")" method="post">
                <div class="form-group">
                    <label>Kullanıcı Tipi:</label>
                    <input class="form-control" value="@(Model.ADDomain != null && Model.ADDomain != "" ? "Harici" : "Dahili")" readonly disabled />
                </div>
            </form>
            <form class="form-group">
                <label>Kullanıcı Adı:</label>
                <input value="@Model.UserName" class="form-control" disabled />
            </form>
            @if (Model.ADDomain != null && Model.ADDomain != "")
            {
                <form class="form-group">
                    <label>Email:</label>
                    <input value="@Model.Email" class="form-control" disabled />
                </form>
                <form class="form-group">
                    <label>Email:</label>
                    <input value="@Model.Email" class="form-control" disabled />
                </form>
            }
            else
            {
                <form class="form-group">
                    <label>Email:</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </form>
                <form class="form-group">
                    <label>Password:</label>
                    <input class="form-control" type="password" value="model@secretpass" name="passwordvalue" />
                </form>
            }
        </div>
    </div>
</div>